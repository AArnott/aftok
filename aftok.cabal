Name:          aftok
Version:       0.1
Synopsis:      The Aftok Collaboration Platform
Description:   A time logging and payment distribution service to enable groups of trusted contributors 
               to collaboratively develop commercial applications.
License:       AllRightsReserved
Author:        Kris Nuttycombe
Maintainer:    kris@aftok.com
Stability:     Experimental
Category:      Web
Build-type:    Simple
Cabal-version: >= 2.0

library
  default-language:   Haskell2010
  ghc-options:        -Wall -Werror
  hs-source-dirs:     lib
  default-extensions: NoImplicitPrelude
                    , OverloadedStrings
                    , RecordWildCards
                    , ScopedTypeVariables
                    , KindSignatures
  exposed-modules:    Aftok.Auction
                      Aftok.Billables
                      Aftok.Config
                      Aftok.Currency
                      Aftok.Currency.Bitcoin
                      Aftok.Database
                      Aftok.Database.PostgreSQL
                      Aftok.Database.PostgreSQL.Types
                      Aftok.Interval
                      Aftok.Json
                      Aftok.Payments
                      Aftok.Payments.Types
                      Aftok.Project
                      Aftok.TimeLog
                      Aftok.TimeLog.Serialization
                      Aftok.Types
                      Aftok.Util
                      Aftok.Util.Http
  build-depends:      
      base                
    , bippy               
    , blake2
    , classy-prelude      
    , aeson              
    , attoparsec         
    , base64-bytestring 
    , bifunctors
    , blaze-builder       
    , bytestring
    , cereal
    , containers       
    , configurator             
    , cryptonite
    , either          
    , errors         
    , free
    , from-sum
    , groups        
    , haskoin-core 
    , heaps       
    , hourglass  
    , kan-extensions
    , lens     
    , lens-aeson
    , mtl
    , network                   
    , network-uri
    , old-locale        
    , postgresql-simple
    , protobuf
    , safe            
    , semigroups
    , semigroupoids
    , smtp-mail               
    , system-filepath
    , template-haskell
    , text           
    , thyme         
    , transformers
    , uuid         
    , unordered-containers
    , vector-space
    , x509
    , x509-store

Test-Suite spec
  default-language:   Haskell2010
  type:               exitcode-stdio-1.0
  ghc-options:        -Wall -Werror
  hs-source-dirs:     test
  main-is:            Spec.hs
  default-extensions: NoImplicitPrelude
                    , OverloadedStrings
                    , RecordWildCards
                    , ScopedTypeVariables
                    , KindSignatures
  other-modules: Aftok.AuctionSpec
               , Aftok.Generators
               , Aftok.PaymentsSpec
               , Aftok.TimeLogSpec
               , Aftok.Util.HttpSpec

  build-depends:    
      aftok
    , base
    , classy-prelude
    , aeson
    , attoparsec
    , bifunctors
    , containers
    , hspec      
    , HUnit
    , haskoin-core 
    , hourglass
    , iso8601-time
    , lens
    , QuickCheck 
    , semigroups
    , text
    , thyme
    , uuid
    , vector-space

